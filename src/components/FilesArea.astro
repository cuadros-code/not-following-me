---
import IconFile from "./IconFile.astro";

---

<section>
  <div class="card dropzone dropzone-followers" data-dropzone-followers>
    <input class="inner" type="file" data-followers-file>
      <span class="file-name followers-text-file">Select your followers file</span>
    </input>
  </div>
  <div class="icon">
    <IconFile />
  </div>
  <div class="card dropzone dropzone-following" data-dropzone-following>
    <input class="inner" type="file" data-following-file>
      <span class="file-name following-text-file">Select your following file</span>
    </input>
  </div>
</section>

<script>
  const followersFile = document.querySelector('[data-followers-file]');
  const followingFile = document.querySelector('[data-following-file]');

  const dropzoneFollowers = document.querySelector('[data-dropzone-followers]')
  const dropzoneFollowing = document.querySelector('[data-dropzone-following]')


  followersFile?.addEventListener('change', event => {
    addFileName(event, 'followers-text-file', 'dropzone-followers')
  })

  followingFile?.addEventListener('change', event => {
    addFileName(event, 'following-text-file', 'dropzone-following')
  })

  function handleDragEvent(event: any, action: string) {
    if (action === 'add') {
      event.currentTarget.classList.add('hoverEvent');
    } else if (action === 'remove') {
      event.currentTarget.classList.remove('hoverEvent');
    }
  }

  function initializeDropzone(dropzone: Element) {
    dropzone.addEventListener("dragover", (event: Event) => handleDragEvent(event, 'add'), false);
    dropzone.addEventListener("dragleave", (event: Event) => handleDragEvent(event, 'remove'), false);
    dropzone.addEventListener("drop", (event: Event) => handleDragEvent(event, 'remove'), false);
  }

  initializeDropzone(dropzoneFollowers);
  initializeDropzone(dropzoneFollowing);

  function addFileName(event: any, elementClass: string, parentName: string){
    if(event?.target?.files[0]){
      const textRef = document?.querySelector(`.${elementClass}`)
      textRef!.textContent = `${event.target.files[0].name}`

      document.querySelector(`.${parentName}`)?.setAttribute('class', 'card dropzone active')
    }
  }

</script>

<style>
	section {
    margin: auto;
    width: 70vw;
    height: 40vh;
    background-color: #e1e1e12f;
    border-radius: 30px;
    padding: 30px;
    box-sizing: border-box;
    display: grid;
    grid-template-columns: 5fr 1fr 5fr;
  }

  .icon{
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .card {
    height: 100%;
    border-radius: 30px;
  }

  .card .inner {
    height: calc(100% - 8px);
    background: #323232;
    color: #fff;
    border-radius: 30px;
    cursor: pointer;
  }

  .card .inner::-webkit-file-upload-button {
    visibility: hidden;
  }

  .dropzone {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: 0.3s;
  }

  .dropzone .inner {
    position: relative;
    width: 100%;
    border: none;
    color: transparent;
  }

  @keyframes rotate {
    from {
      transform: rotate(0);
    }

    to {
      transform: rotate(360deg);
    }
  }

  .dropzone .inner {
    margin: 5px;
  }

  .dropzone::before {
    content: "";
    display: block;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(102, 102, 102, 0.75) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    height: 300px;
    width: 200px;
    position: absolute;
    animation: rotate 5s linear forwards infinite;
    z-index: 0;
    top: 50%;
    transform-origin: top center;
    transition: 0.5s;
  }

  .dropzone:hover::before {
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(72, 119, 230, 0.75) 50%,
      rgba(255, 255, 255, 0) 100%
    );
  }

  .active {
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(72, 230, 85, 0.563) 50%,
      rgba(255, 255, 255, 0) 100%
    );
  }

  .hoverEvent {
    transform: scale(1.1);
  }

  .file-name{
    position: absolute;
    font-size: 18px;
    color: #fff;
  }

</style>
